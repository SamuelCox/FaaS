@using FaaS.Models
@using Microsoft.WindowsAzure.Storage.Blob
@model FileIndexModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <form method="post" asp-action="Upload" asp-controller="File" enctype="multipart/form-data">
        <input type="text" name="container" />
        <input type="file" name="files" multiple />
        <input type="submit" value="Upload" />
    </form>
</div>

@foreach(KeyValuePair<string, List<CloudBlob>> kvp in Model.GetAllContainers())
{
    <div>
        <div class="container">
            <h3>@kvp.Key</h3>
            <div class="row">
                @foreach (CloudBlob blob in kvp.Value)
                {


                    <div class="col-md-2">
                        <img data-src="holder.js/100px280/thumb" alt="Card image cap">
                        <p class="card-text">Hi</p>
                    </div>


                }
            </div>

        </div>
    </div>
}

